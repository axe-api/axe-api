{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@core": ["./core/index"]
    }
  },
  "include": ["src/**/*", "index.ts", "dev-kit.ts", "dev-kit/**/*"]
}
